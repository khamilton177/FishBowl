<!-- Profiles _profile_form -->

<% if @profile.errors.full_messages.any? %>
<ul>
  <% @profile.errors.full_messages.each do |error_message| %>
  <li>
    <%= error_message %>
  </li>
  <br>
  <% end %>
</ul>
<% end %>
<div class="form-group">
  Email:  <%= f.email_field :email, placeholder: "you@somewhere.com", class: "sign_up #{controller.action_name}-field", readonly: controller.action_name == "show" %>
</div>
<div class="form-group">
  First Name:  <%= f.text_field :fname, placeholder: "First Name", class: "form #{controller.action_name}-field", readonly: controller.action_name == "show" %>
  <% if controller.action_name == "show" %>
    <BR>
  <% end %>
  Last Name:  <%= f.text_field :lname, placeholder: "Last Name", class: "form #{controller.action_name}-field", readonly: controller.action_name == "show" %>
</div>
<div class="form-group">
  DOB:  <%= f.date_field :dob, placeholder: "DOB: MM/DD/YYYY", class: "form #{controller.action_name}-field", readonly: controller.action_name == "show" %>
</div>
<% if controller.action_name == "new" %>
  <BR>
  <div class="form-group">
    <%= f.label(:avatar, "Click to add file", class: "btn btn-secondary avatar-file") %>
    <%= f.file_field :avatar, class: "avatar-file #{controller.action_name}-field", required: true, readonly: controller.action_name == "show" %>
  </div>
<% end %>
<div class="form-group">
  <p>A little about me:</p>
  <%= f.text_area :about, placeholder: "About me", class: "form f_text_area #{controller.action_name}-field", readonly: controller.action_name == "show" %>
</div>
