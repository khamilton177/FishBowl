<%= form_for @profile, html: {multipart: true} do |prof_f| %>
  <%= prof_f.email_field :email, placeholder: "you@somewhere.com", class: "sign_up" %>
  <%= prof_f.text_field :fname, placeholder: "First Name", class: "prof_f" %>
  <%= prof_f.text_field :lname, placeholder: "Last Name", class: "prof_f" %>
  <%= prof_f.date_field :dob, placeholder: "DOB: MM/DD/YYYY", class: "prof_f" %>
  <%= prof_f.file_field :avatar, placeholder: "Your Pic", class: "prof_f" %>
  <%= prof_f.text_area :about, placeholder: "About me", class: "prof_f" %>
<% end %>
