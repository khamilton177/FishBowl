<!-- Profiles _edit -->

  <%= form_for @profile, html: {multipart: true} do |form| %>
    <% if @profile.errors.full_messages.any? %>
    <ul>
      <% @profile.errors.full_messages.each do |error_message| %>
      <li>
        <%= error_message %>
      </li>
      <br>
      <% end %>
    </ul>
    <% end %>
    <div class="form-group">
      Email:  <%= form.email_field :email, placeholder: "you@somewhere.com", class: "sign_up" %>
    </div>
    <div class="form-group">
      First Name:  <%= form.text_field :fname, placeholder: "First Name", class: "form" %>
      Last Name:  <%= form.text_field :lname, placeholder: "Last Name", class: "form" %>
    </div>
    <div class="form-group">
      DOB:  <%= form.date_field :dob, placeholder: "DOB: MM/DD/YYYY", class: "form" %>
    </div>
    <div class="form-group">
      <p>A little about me:</p>
      <%= form.text_area :about, placeholder: "About me", class: "form f_text_area" %>
    </div>
    <%= form.submit "Save", class: "save_f" %>
  <% end %>
