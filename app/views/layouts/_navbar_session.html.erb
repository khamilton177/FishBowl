<ul class="nav nav-tabs nav-justified">
  <li class="nav-item">
    <%= link_to(" ", root_path, id: "logo", class: "navbar-brand nav-link #{controller.controller_name}") %>
  </li>
  <li class="nav-item">
    <%= link_to("My Post", posts_by_author_path(current_user.id), method: :get, class: "nav-link lay_drop_lnks") %>
  </li>
  <li class="nav-item">
    <%= link_to("New Post", new_post_path, method: :get, class: "nav-link lay_drop_lnks") %>
  </li>

  <li class="nav-item dropdown">
    <a id="dropdownMain" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
       <small>Logged in as</small> <span class="emphasize"><%= current_user.username.capitalize %></span><span class="caret"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMain">
      <% if current_user.profile %>
        <%= link_to("Profile", profile_path(current_user.profile.id), method: :get, class: "dropdown-item lay_drop_lnks") %>
      <% end %>
      <%= link_to("My Post", posts_by_author_path(current_user.id), method: :get, class: "dropdown-item lay_drop_lnks") %>
      <%= link_to("New Post", new_post_path, method: :get, class: "dropdown-item lay_drop_lnks") %>
      <div class="dropdown dropdown-item">
        <a id="dropdownMenu2" class="dropdown-toggle lay_drop_lnks" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
           <span>Change Password </span><span class="caret"></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
          <div class="signin-dialog-body dropdown-item lay_drop_lnks">
            <%= render "users/edit" %>
          </div>
        </div>
      </div>
      <%= link_to("Delete Account", user_path(current_user), method: :delete, data: {confirm: "Are you sure you want to delete account?"}, class: "dropdown-item lay_drop_lnks") %>
      <hr>
      <%= link_to("Sign Out", sign_out_path, method: :delete, class: "dropdown-item lay_drop_lnks laySignBtn") %>
    </div>
  </li>
</ul>
