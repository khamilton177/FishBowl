<!-- Edit comment form from New -->

  <div class="modal-header">
    <h5 class="modal-title" id="editCommentModalLabel">Edit Comment</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">Ã—</span>
    </button>
  </div>
  <div class="modal-body">
    <%= form_for @comment, url: post_comment_path, remote: true, authenticity_token: true do |comment_f| %>
      <div class="form-group">
        <%= comment_f.label :content, class: "post-label" %>
        <%= comment_f.text_area :content, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= comment_f.submit "Save", class: "btn btn-primary" %>
        <a href="" class="btn btn-secondary" data-dismiss="modal">Back</a>
      </div>
    <% end %>
  </div>
