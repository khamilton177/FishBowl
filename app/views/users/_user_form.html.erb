<% if @user.errors.full_messages.any? %>
<ul>
  <% @user.errors.full_messages.each do |error_message| %>
  <li>
    <%= error_message %>
  </li>
  <br>
  <% end %>
</ul>
<% end %>
<!-- check for a particular error- user.errors[:email] -->

<%= form_for @user, url: {action: "create"}, html: {multipart: true} do |form| %>
  <%= form.text_field :username, placeholder: "Username", class: "sign_up" %>
  <%= form.password_field :password, placeholder: "Password", class: "sign_up" %>
  <%= form.email_field :email, placeholder: "you@somewhere.com", class: "sign_up" %>
  <%= form.fields_for :profile, html: {multipart: true}  do |profile_form| %>
    <%= profile_form.text_field :fname, placeholder: "First Name", class: "prof_f" %>
    <%= profile_form.text_field :lname, placeholder: "Last Name", class: "prof_f" %>
    <%= profile_form.date_field :dob, placeholder: "DOB: MM/DD/YYYY", class: "prof_f" %>
    <%= profile_form.file_field :avatar, placeholder: "Your Pic", class: "prof_f" %>
    <%= profile_form.text_area :about, placeholder: "About me", class: "prof_f" %>
    <% end %>
  <%= form.submit "Sign-Up", id: "sign_up_btn" %>
<% end %>
