<!-- User Edit Form -->

<%= form_for @user do |form| %>
  <% if @user.errors.full_messages.any? %>
  <ul>
    <% @user.errors.full_messages.each do |error_message| %>
    <li>
      <%= error_message %>
    </li>
    <br>
    <% end %>
  </ul>
  <% end %>
  <div class="form-group">
    Username:  <%= form.text_field :username, placeholder: "Username", class: "form-control sign_up" %>
  </div>
  <div class="form-group">
    Password  <%= form.password_field :password, placeholder: "Password", class: "form-control sign_up" %>
  </div>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
<BR>
<%= link_to("Back", :back, class: "btm_links") %>
