<div class="col-sm-8 blog-main">
  <h2><%= @author %></h2>
    <% @posts.each do |post| %>
      <div class="blog-post">
        <h2 class="blog-post-title"><%= post.title %></h2>
        <p class="blog-post-meta"><%= post.created_at.strftime("%B %d, %Y") %></p>
        <blockquote>
          <%= post.content %>
        </blockquote>
        <p>
          <%= link_to root_path, class: "m-3 post_links" do %>
            <i class="fa fa-comment-o" aria-hidden="true"></i>
          <% end %>
          <% if @current_user && @current_user.id == post.user_id %>
            <%= link_to edit_post_path(post), class: "m-3 post_links"  do %>
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            <% end %>
            <%= link_to post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: "m-3 post_links" do %>
              <i class="fa fa-trash-o" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </p>
      </div><!-- /.blog-post -->
    <% end %>
</div> <!-- /.blog-main -->
