<div class="col-sm-8 blog-main">
  <p>
    <span class="post_t">Title:</span>
    <%= @post.title %>
  </p>
  <p class="post">
    <%= @post.content %>
  </p>
  <p>
    <span class="post_span post_dt">Date:</span>
    <%= @post.created_at.strftime("%B %d, %Y") %>
  </p>
  <a href="#" class="post_links"><i class="fa fa-comment-o" aria-hidden="true"></i></a>
  <% if @current_user && @current_user.id == @post.user_id %>
    <%= link_to edit_post_path(@post), class: "m-3 post_links"  do %>
      <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    <% end %>
    <%= link_to post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: "m-3 post_links" do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
  <% end %>
  <%= link_to("Back", :back, class: "m-3 post_links") %>
</div> <!-- /.blog-main -->
